<h1><%= @article.title %></h1>
<p>
	<%= @article.text %>
</p>

<h2>Комментарии</h2>

<% @article.comments.each do |comment| %>
	<p>
		<i><%= comment.author %> сказал:</i><br/>
		<%= comment.body %>
		<hr>
<% end %>
</p>


<h2>Добавить комментарии:</h2>
<p>
	<%= form_for([@article, @article.comments.build]) do |f| %>
 
		<p>
			<%= f.label :author %>
			<br/>
			<%= f.text_field :author %>
		</p>

		<p>
			<%= f.label :body %>
			<br/>
			<%= f.text_area :body %>
		</p>

		<p>
			<%= f.submit %>
		</p>

	<% end %>
</p>