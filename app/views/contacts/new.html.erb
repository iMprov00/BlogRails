<h1>Контакты</h1>

<%= form_for :contact, url: contacts_path do |f| %>
	<% if @contact && @contact.errors.any? %>
	<p>
		<ul>
		<% @contact.errors.full_messages.each do |msg| %>
			<li> <%= msg %> </li>
		<% end	%>
		</ul>
	</p>
	<% end %>
	<p>
		<label>Почта (Email)</label>
		<br/>
		<%= f.text_field :email %>
	</p>

	<p>
		<label>Сообщение</label>
		<br/>
		<%= f.text_area :message %>
	</p>

	<p>
		<%= f.submit 'Отправить сообщение' %>
	</p>

<% end %>